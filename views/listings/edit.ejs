<%layout("/layouts/boilerplate.ejs")-%>

    <h1>EDIT</h1>
    <form  method= "post" action="/listingS/<%=data.id%>?_method=PUT" class="needs-validation"  enctype="multipart/form-data" novalidate>
    <div class="row">
        <div class="col-8 offset-2">
        <div class="mb-3">
            <label for="title" class="form-label">TITLE</label>
            <input type="text" name="title" class="form-control" placeholder="Enter Title" value="<%=data.title%>" required>
        </div>
       
        <div class="mb-3">
        <label for="description"  class="form-label">Description:</label>
        <input type="text" name="description" class="form-control"  value="<%=data.description%>" required>
        <br><br>
    </div>
    
    <div class="mb-3">
        <h2>Orignal listing image</h2>
             <img src="<%=orignalimageurl%>" alt=""  style="width: 300px; height: 200px;">
        <br><br>
    </div>
    <div class="mb-3">
        <label for="image"  class="form-label">Upload New Image:</label>
        <input type="file" name="image"  class="form-control" >
        <br><br>
    </div>
    <div class="row">
    <div class="mb-3 col-md-4"> 
        <label for="price"   class="form-label">Price:</label>
        <input type="text" name="price" value="<%=data.price %>" class="form-control" required>
<div class="invalid-feedback">Please enter valid Price</div>        <br><br>
    </div>
    <div class="mb-3 col-md-8"> 
        <label for="location" class="form-label">Location:</label>
        <input type="text" name="location" value="<%=data.location%>" class="form-control" required>
        <br><br>
        <div class="invalid-feedback">Please enter location</div>
    </div>
</div>

        <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input type="text" name="country" value="<%=data.country%>" class="form-control"required >
         <br><br>
         <div class="invalid-feedback">Please enter country</div>
        </div>
        <button  class="btn btn-dark mt-3" id="create">EDIT</button>
        
         
    </form>
</div>
</div>
</body>
</html>